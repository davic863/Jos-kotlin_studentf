<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/VU_page"
    tools:context=".ViewUser">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person"
            android:layout_marginTop="15dp"
            android:id="@+id/VU_image"
            />
        <TextView
            android:layout_below="@+id/VU_image"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:id="@+id/label_VU_name"
            android:textSize="20sp"
            />
        <TextView
            android:layout_below="@+id/VU_image"
            android:layout_toEndOf="@+id/label_VU_name"
            android:layout_marginTop="50dp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/VU_name"
            android:textSize="20sp"
            />

        <TextView
            android:layout_below="@+id/label_VU_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:id="@+id/label_VU_email"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_toEndOf="@+id/label_VU_email"
            android:layout_below="@+id/label_VU_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/VU_email"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_below="@+id/label_VU_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:id="@+id/label_VU_password"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_toEndOf="@+id/label_VU_password"
            android:layout_below="@+id/label_VU_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/VU_password"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_below="@+id/label_VU_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:id="@+id/label_VU_address"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/label_VU_address"
            android:layout_below="@+id/label_VU_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:id="@+id/VU_address"
            android:textSize="20sp"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_marginStart="15dp"
            />
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/label_VU_address"
            android:layout_marginStart="15dp"

            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btUpdate_user"
                android:textSize="20sp"
                android:text="update"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                />
            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bt_delete_user"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:text="delete  "
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:textSize="20sp"
                />

        </LinearLayout>






    </RelativeLayout>


</ScrollView>