      <Spinner
          android:id="@+id/sp_signup_oo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="20dp"
          android:entries="@array/States"
          android:layout_marginTop="15dp"
          android:layout_below="@id/chekbox_group"
          />


     <LinearLayout
         android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
         android:layout_below="@id/et_signup_confm_password"
         android:id="@+id/chekbox_group"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="TRACK"
             android:textSize="18sp"
             android:layout_marginStart="20dp"
             android:textColor="@android:color/black"
             />

         <CheckBox
             android:layout_marginStart="25dp"
             android:id="@+id/cb_mobile_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Mobile"
             android:textColorHint="@android:color/black"
             />

         <CheckBox
             android:layout_marginStart="25dp"
             android:id="@+id/cb_arvr"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="AR/VR"
             android:textColorHint="@android:color/black"
             />
         <CheckBox
             android:layout_marginStart="25dp"
             android:id="@+id/cb_bkend_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Back End"
             android:textColorHint="@android:color/black"
             />
         <CheckBox
             android:layout_marginStart="25dp"
             android:id="@+id/cb_git"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Git"
             android:textColorHint="@android:color/black"
             />
         <CheckBox
             android:layout_marginStart="25dp"
             android:id="@+id/cb_digital"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="Digital Marketing"
             android:textColorHint="@android:color/black"
             />

     </LinearLayout>

