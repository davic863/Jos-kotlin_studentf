<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <TextView
          android:id="@+id/tv_signup_page"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Signup page"
          android:textColor="@color/colorPrimary"
          android:textStyle="italic"
          android:layout_centerHorizontal="true"
          android:textSize="18sp"
          />


      <ImageView
          android:id="@+id/im_person"
          android:layout_width="200dp"
          android:layout_height="200dp"
          android:src="@drawable/ic_person"
          android:layout_below="@+id/tv_signup_page"
          android:layout_marginTop="15dp"
          android:layout_centerInParent="true"
          android:layout_marginBottom="25dp"
          />


      <EditText
          android:layout_below="@+id/im_person"
          android:drawableStart="@drawable/ic_person"
          android:id="@+id/et_signup_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/text_signup_name"
          android:paddingBottom="10dp"
          android:textColorHint="@android:color/black"
          android:layout_marginEnd="20dp"
          android:textSize="18sp"
          android:layout_marginTop="30dp"
          android:layout_marginStart="20dp"
          android:inputType="textPersonName"
          android:imeOptions="actionNext"
          />
      <RadioGroup
          android:id="@+id/gender_group"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/et_signup_name"
          android:orientation="horizontal"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:layout_marginTop="15dp"
          >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Gender"
              android:padding="5dp"
              android:textSize="18sp"
              android:textColor="@android:color/black"
              />

          <RadioButton
              android:id="@+id/gender_male"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="male"
              android:textIsSelectable="true"
              android:layout_marginStart="20dp"
              android:textColorHint="@android:color/black"
              />
          <RadioButton
              android:id="@+id/gender_female"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="Female"
              android:textIsSelectable="true"
              android:textColorHint="@android:color/black"
              />
      </RadioGroup>
